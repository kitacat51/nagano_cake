<div class="container">
       <h2>新規会員登録</h2>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <%= render "public/shared/error_messages", resource: resource %>
         
        <div class="form-group row">
            <div class="col-md-3 text-left">
              <label class="control-label">名前</label>
            </div>
            <div class="col-md-8">
                (姓)<%= f.text_field :last_name %>
                (名)<%= f.text_field :first_name %>
            </div>
        </div>
       <div class="form-group row">
            <div class="col-md-3 text-left">
                <label class="control-label">フリガナ</label>
            </div>
            <div class="col-md-8">
                  (セイ)<%= f.text_field :last_name_kana %>
                  (メイ)<%= f.text_field :first_name_kana %>
            </div>
       </div>
       <div class="form-group row">
            <div class="col-md-3 text-left">
                <label class="control-label">メールアドレス</label>
            </div>
            <div class="col-md-8">
                 <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
       </div>
       
       <div class="form-group row">
            <div class="col-md-3 text-left">
                <label class="control-label">郵便番号（ハイフンなし)</label>
            </div>
            <div class="col-md-8">
                   <%= f.text_field :postal_code %>
            </div>
       </div>
       
       <div class="form-group row">
            <div class="col-md-3 text-left">
                <label class="control-label">住所</label>
            </div>
            <div class="col-md-8">
            <%= f.text_field :address %>
            </div>
       </div>
       <div class="form-group row">
            <div class="col-md-3 text-left">
                <label class="control-label">電話番号（ハイフンなし)</label>
            </div>
            <div class="col-md-8">
               <%= f.text_field :telephone_number %>
            </div>
       </div>
  
       <div class="form-group row">
            <div class="col-md-3 text-left">
              <label class="control-label">パスワード
            
               <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
               <% end %>
              </label>
            </div>
            <div class="col-md-8"> 
             <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
       </div>
       
       <div class="form-group row">
            <div class="col-md-3 text-left">
                <label class="control-label">パスワード（確認用）</label>
            </div>
            <div class="col-md-8">
             <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
           </div>
       </div>
       <div class="form-group row">
           <div class="actions col-md-8">
             <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
           </div>
            <% end %>
       </div>
       <div class="form-group row">  
           <div class="col-md-8">
             <h5>既に登録済みの方</h5>
             <%= link_to customer_session_path do %>
             <%= "こちら" %>
             <% end %>からログインしてください。
           </div>
       </div>
         
         
</div>