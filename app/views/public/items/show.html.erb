        <table class="table">
           <tbody>
              <tr>
                <td><%= image_tag @item.get_image(100,100) %></td>
                <td>
                    商品名<%= @item.name %> <br>
                    商品説明<%= @item.introduction %> <br>
                    ￥<%= @item.price %>（税込） <br>
                    <%= form_with model: @cart_item,url: cart_items_path , method: :post do |f| %>
                    <%= f.hidden_field :item_id, :value => @item.id %>
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit "カートに入れる" %>
                    <% end %>
                </td>
              </tr>
           </tbody>
        </table>