<h1>商品一覧</h1>

<table>
<% @items.each do |item| %>
    <tr>
     <td>
         <%= image_tag item.get_image(100,100) %>
     </td>
     <td><%= link_to item_path(item.id) do %>
         <%= item.name %>
         <% end %>
     </td>
     <td>
         <%= item.price %>
     </td>

<% end %>
</table>