<div class="container px-5 px-sm-0">
      <h3>商品一覧</h3>
  <div class="row">
       <% @items.each do |item| %>
         <div class="col-md-3">
           <p><%= image_tag item.get_image(150,150) %></p>
           <p><%= link_to item_path(item.id) do %>
            <%= item.name %>
            <% end %>
           </p>
           <p>￥<%= item.price %>
           </p>
         </div>
       <% end %>
   </div>
</div>