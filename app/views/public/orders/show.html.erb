<h1>注文履歴詳細</h1>

<h1>注文情報</h1>
<table>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %> </td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status %></td>
    </tr>
</table>

<h1>請求情報</h1>
<table>
    <tr>
      <th>商品合計</th>
      <td><%= @total_payment %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @shopping_cost %></td>
    </tr>
    <tr>
      <th>ご請求銀額</th>
      <td><%= @shopping_cost + @total_payment %></td>
    </tr>
</table>

<h1>注文内容</h1>
<table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
   </thead>
   <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
      </tr>
    <% end %>
   </tbody>
</table>