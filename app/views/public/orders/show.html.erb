<h1>注文履歴詳細</h1>

<h1>注文情報</h1>
<table>
    <tr>
      <th>注文日</th>
      <td></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %> </td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td></td>
    </tr>
</table>

<h1>請求情報</h1>
<table>
    <tr>
      <th>商品合計</th>
      <td><%= @total_payment %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @shopping_cost %></td>
    </tr>
    <tr>
      <th>ご請求銀額</th>
      <td><%= @shopping_cost + @total_payment %></td>
    </tr>
</table>

<h1>注文内容</h1>
<table>
    <thead>
      <tr>
        <th商品></th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
   </thead>
   <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%=image_tag cart_item.item.get_image(100,100) %>
            <%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <% @total_payment += cart_item.subtotal %>
      </tr>
    <% end %>
   </tbody>
</table>


