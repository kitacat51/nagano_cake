<div class="container">
<h1>注文履歴一覧</h1>
<table class="table table-bordered">
    <thead>
        <tr>
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th>支払金額</th>
         <th>ステータス</th>
         <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
     <tr>
       <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
       <td>〒<%= order.postal_code %><br>
           <%= order.address %><br>
           <%= order.name %>
       </td>
       <% order.order_details.each do |order_detail| %>
       <td><%= order_detail.item.name %></td>
       <% end %>
       <td><%= order.total_payment %></td>
       <td><%= order.status_i18n %></td>
       <td><%= link_to order_path(order.id) do %>
           <button type="button" class="btn btn-primary">表示する</button>
           <% end %>
       </td>
     </tr>
    <% end %>
    </tbody>
</table>

</div>