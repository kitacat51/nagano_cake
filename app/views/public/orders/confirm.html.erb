
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>注文情報確認</h1>
      <%= form_with model: @order,url: show_path do |f| %>
        <table>
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
          <% @cart_items.each do |cart_item| %>
           <tr>
            <td><%=image_tag cart_item.item.get_image(100,100) %>
                <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total_payment += cart_item.subtotal %>
           </tr>
          <% end %>
          </tbody>
        </table>
        <table>
         <tr>
           <th>送料</th>
           <td>800</td>
         </tr>
         <tr>
           <th>商品合計</th>
           <td><%= @total_payment %></td>
         </tr>
         <tr>
           <th>請求金額</th>
           <td><%= 800 + @total_payment %></td>
         </tr>
        
        </table>
      <h2>支払方法</h2>
      <%= @order.payment_method %>
      
      <h2>お届け先</h2>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
      
      
      <%= f.submit "注文を確定する",class:"btn btn-primary" %>
    <% end %>