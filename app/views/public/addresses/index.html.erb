<h1>配送先登録/一覧</h1>

<%= form_with model: @address,url: addresses_path,method: :post do |f| %>

<td>郵便番号(ハイフンなし)</td>
  <%= f.text_field :postal_code %>

<td>住所</td>
  <%= f.text_field :address %>

<td>宛名</td>
   <%= f.text_field :name %>

<%= f.submit "新規登録",class:"btn btn-secondary" %>

<% end %>

<table>
    郵便番号
    住所
    宛名
<% @addresses.each do |address| %>
     <td>
         <%= address.postal_code %>
     </td>
     <td>
         <%= address.address %>
     <td>
         <%= address.name %>
     </td>
     <td>
      <%= link_to "編集する",edit_address_path(address.id),class:"btn btn-sm btn-success" %>
     </td>
     <td>
      <%= link_to "削除する",address_path(address.id),method: :delete, class:"btn btn-sm btn-success" %>
     </td>
<% end %>
</table>