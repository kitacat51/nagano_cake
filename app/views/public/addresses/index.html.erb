<h1>配送先登録/一覧</h1>

<table>
<%= form_with model: @address,url: addresses_path,method: :post do |f| %>
<tr>
 <th>郵便番号(ハイフンなし)</th>
 <td><%= f.text_field :postal_code %></td>
</tr>
<tr></tr>
 <th>住所</th>
  <td><%= f.text_field :address %></td>
</tr>
<tr>
 <th>宛名</th>
   <td><%= f.text_field :name %></td>
   <td><%= f.submit "新規登録",class:"btn btn-success" %></td>
</tr>


<% end %>
</table>
<table>
  <thead>
   <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
   </tr>
  </thead>
<% @addresses.each do |address| %>
   <tr>
     <td>
         <%= address.postal_code %>
     </td>
     <td>
         <%= address.address %>
     <td>
         <%= address.name %>
     </td>
     <td>
      <%= link_to "編集する",edit_address_path(address.id),class:"btn btn-sm btn-success" %>
      <%= link_to "削除する",address_path(address.id),method: :delete, class:"btn btn-sm btn-danger" %>
     </td>
   </tr>
<% end %>
</table>