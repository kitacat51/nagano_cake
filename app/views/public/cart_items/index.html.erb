<h1>ショッピングカート</h1>


<table> 
  <thead>
      <th>商品名</th>
      <th></th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
          <td><%=image_tag cart_item.item.get_image(100,100) %></td>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <%= form_with model: cart_item,url: cart_item_path(cart_item.id) , method: :patch do |f| %>
          <td><%= f.select :amount, *[1..10]  %></td>
          <td><%= f.submit '変更',class:"btn btn-success" %></td>
          <% end %>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item.id),method: :delete,class:"btn btn-danger" %>
          </td>
          <% @total_payment += cart_item.subtotal %>
      </tr>
  <% end %>
  <tr>
    <td>合計金額：<%= @total_payment %>
    </td>
  </tr>
  </tbody>
</table>

     <td><%= link_to items_path do %>
         <button type="button" class="btn btn-primary">買い物を続ける</button>
         <% end %>
     </td>
     
        <%= link_to new_order_path do %>
        <button type="button" class="btn btn-success">情報入力に進む</button>
        <% end %>