<div class="container ">
   <h3>ショッピングカート 
   <div class = "text-right"><%= link_to "カートを空にする",destroy_all_path,method: :delete,class:"btn btn-danger" %></div>    </h3>



  <table class="table table-bordered"> 
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th></th>
        <th scope="col">単価(税込)</th>
        <th scope="col">数量</th>
        <th></th>
        <th scope="col">小計</th>
        <th></th>
       </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%=image_tag cart_item.item.get_image(100,100) %></td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price%></td>
            <%= form_with model: cart_item,url: cart_item_path(cart_item.id) , method: :patch do |f| %>
            <td><%= f.select :amount, *[1..10]  %></td>
            <td><%= f.submit '変更',class:"btn btn-success" %></td>
            <% end %>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id),method: :delete,class:"btn btn-danger" %>
            </td>
         </tr>
            <% @total_payment += cart_item.subtotal %>
      
    <% end %>
    </tbody>
  </table>
  
  <div class="row">
        <div class="col-md-6">
         <%= link_to root_path do %>
         <button type="button" class="btn btn-primary">買い物を続ける</button>
         <% end %>
        </div>
      <div class = "col-md-6 text-right">合計金額：<%= @total_payment %></div>
  </div>
  
  <div class="row">
      <div class="col-md-12 text-center">
        <% if @cart_items.any? %>
         <%= link_to new_order_path do %>
         <button type="button" class="btn btn-success">情報入力に進む</button>
         <% end %>
        <% end %>
      </div>
  </div>
</div>