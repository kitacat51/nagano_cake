<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <heaedr>
     <div class="border-bottom" style="padding:10px;">
      <nav class="navbar navbar-expand-lg">
        <div class="container">

          <a class="navbar-band" href="/">
              <p class="border">NaganoCake</p>
          </a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
               <% if customer_signed_in? %>
                 <li>
                  ようこそ、<%= @customer_last_name %>さん!
                 </li>
                 <li>
                  <button type="button" class="btn btn-outline-secondary">
                   <%= link_to "マイページ", mypage_path %>
                  </button>
                 </li>
                 <li>
                  <button type="button" class="btn btn-outline-secondary">
                   <%= link_to "商品一覧", items_path %>
                  </button>
                 </li>
                 <li>
                  <button type="button" class="btn btn-outline-secondary">
                    <%= link_to "カート", cart_items_path %>
                  </button>  
                 </li>
                 <li>
                  <button type="button" class="btn btn-outline-secondary">
                    <%= link_to "ログアウト", destroy_customer_session_path,method: :delete %>
                  </button>
                 </li>
               <% elsif admin_signed_in? %>
                 <li>
                 <%= link_to "商品一覧", admin_items_path,method: :get,class:'border rounded' %>
                 </li>
                 <li>
                 <%= link_to "会員一覧", admin_customers_path,method: :get,class:'border rounded'%>
                 </li>
                 <li>
                 <%= link_to "注文履歴一覧", admin_path,method: :get,class:'border rounded' %>
                 </li>
                 <li>
                 <%= link_to "ジャンル一覧", admin_genres_path,method: :get,class:'border rounded' %>
                 </li>
                 <li>
                 <%= link_to "ログアウト", destroy_admin_session_path,method: :delete,class:'border rounded' %>
                 </li>
               <% else %>
                <div class="p-3">
                   <li>
                   <%= link_to "About", about_path,method: :get,class:'border rounded' %>
                   </li>
                </div>
                <div class="p-3">
                 <li>
                  <%= link_to "商品一覧", items_path,method: :get,class:'border rounded' %>
                 </li>
                </div>
                <div class="p-3">
                 <li>
                 <%= link_to "新規登録", new_customer_registration_path,method: :get,class:'border rounded' %>
                 </li>
                </div>
                <div class="p-3">
                 <li>
                 <%= link_to "ログイン", new_customer_session_path,method: :get,class:'border rounded' %>
                 </li>
                </div>
               <% end %>
           </ul>

        </div>
      </nav>     
               
               
               
               
     </div>          
    </heaedr>
    <%= yield %>
  </body>
</html>
