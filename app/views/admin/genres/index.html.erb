<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre,url:'/admin/genres',method: :post do |f| %>
 <th>ジャンル名</th>
 <td><%= f.text_field :name %></td>
 <td><%= f.submit "新規登録",class:"btn btn-success" %></td>
<% end %>

<table>
 <thead>
  <tr>
   <th>ジャンル</th>
   <th></th>
  </tr>
 </thead>
 <tbody>
   <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success" %>
    </td>
   </tr>
   <% end %>
 </tbody>
</table>