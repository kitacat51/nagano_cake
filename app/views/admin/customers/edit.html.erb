<thead>

<%= form_with model: @customer,url: admin_customer_path(@customer.id),method: :patch do |f| %>
<h1><%= customer.last_name %>
    <%= customer.first_name %>さんの会員情報編集
</h1>


  <tr>
    <th>会員ID</th>
        <%= customer.id %>
    <th>氏名</th>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
    <th>フリガナ</th>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
    <th>郵便番号</th>
        <%= f.text_field :postal_code %>
    <th>住所</th>
        <%= f.text_field :address %>
    <th>電話番号</th>
        <%= f.text_field :telephone_number %>
    <th>メールアドレス</th>
        <%= f.text_field :email %>
    <th>会員ステータス</th>
        <%= f.radio_button :is_deleted, :true %>有効
        <%= f.radio_button :is_deleted, :false %>退会
    <%= f.submit "変更を保存",class:"btn btn-secondary" %>
  </tr>
</thead>

<% end %>