<div class="container">
<h1>注文履歴詳細</h1>

<table>
 <tr>
   <th>購入者</th>
    <td><%= @order.customer.last_name %>
        <%= @order.customer.first_name %>
    </td>
 </tr>
 <tr>
   <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
 </tr>
 <tr>
   <th>配送先</th>
     <td>〒<%= @order.postal_code %>
           <%= @order.address %>
     </td>
     <td><%= @order.name %></td>
 </tr>
 <tr>
   <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
 </tr>
 <tr>
    <th>注文ステータス</th>
    <td><% if @order.status == 1 %>
         <%= f.select :production_status == 1, class: "production_status-select" %>
        <% else %>
         <%= form_with model: @order, url: admin_order_path, method: :patch,local: true do |f| %>
         <%= f.select :status,Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
         <%= f.submit "更新",class:"btn btn-success" %>
         <% end %>
        <% end %>
   </td>
 </tr>
</table>     



<table>
  <thead>
    <tr>
       <th>商品名</th>
       <th>単価( 税込 )</th>
       <th>数量</th>
       <th>小計</th>
       <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @order_details.each do |order_detail| %>
     <tr>
        <td><%= order_detail.item.name %></td>
    　　<td><%= order_detail.item.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
          <%= form_with model: order_detail,url: admin_order_detail_path(order_detail.id) , method: :patch do |f| %>
            <td><%= f.select :making_status,OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
            </td>
            <td><%= f.submit "更新",class:"btn btn-success" %></td>
          <% end %>
        <% @total_payment += order_detail.subtotal %>
     </tr>
   <% end %>
  </tbody>
</table>

 <table>
    <tr>
      <th>商品合計</th>
      <td><%= @total_payment %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @shopping_cost %></td>
    </tr>
    <tr>
      <th>請求合計金額</th>
      <td><%= @shopping_cost + @total_payment %></td>
    </tr>
 </table>
</div>