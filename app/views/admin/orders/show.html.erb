<h1>注文履歴詳細</h1>

   <td>購入者
       <% @order.customer_id %>
   </td>
   <td>注文日
       <% @order.created_at %>
   </td>
   <td>配送先
       <% @order.postal_code %>
       <% @order.address %>
       <% @order.name %>
   </td>
   <td>支払方法
       <% @order.payment_method %>
   </td>
   <td>注文ステータス
       <%= form_with(model: @order, url: admins_order_path, local: true) do |f| %>
       <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
       <%= f.submit "更新" %>
       <% end %>
   </td>
       



<table>
  <thead>
    <tr>
       <th>商品名</th>
       <th>単価( 税込 )</th>
       <th>数量</th>
       <th>小計</th>
       <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @order_details.each do |order_detail| %>
     <tr>
        <td>
            <%= order_detail.item_id %>
        </td>
    　　<td>
            <%= order_detail.price %>
        </td>
        <td>
            <%= order_detail.amount %>
        </td>
        <td>
            <%= order_status %>
        </td>
     </tr>
  </tbody>
</table>