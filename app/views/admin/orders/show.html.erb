<h1>注文履歴詳細</h1>

<table>
 <tr>
   <th>購入者</th>
    <td><% @order.customer.last_name %>
        <% @order.customer.first_name %>
    </td>
 </tr>
 <tr>
   <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
 </tr>
 <tr>
   <th>配送先</th>
     <td>〒<% @order.postal_code %>
         <% @order.address %>
     </td>
     <td><% @order.name %>
     </td>
 </tr>
 <tr>
   <th>支払方法</th>
    <td><% @order.payment_method %></td>
 </tr>
 <tr>
   <td>注文ステータス
       <%= form_with(model: @order, url: admin_orders_path, local: true) do |f| %>

       <%= f.submit "更新" %>
       <% end %>
   </td>
 </tr>
</table>     



<table>
  <thead>
    <tr>
       <th>商品名</th>
       <th>単価( 税込 )</th>
       <th>数量</th>
       <th>小計</th>
       <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @order_details.each do |order_detail| %>
     <tr>
        <td>
            <%= order_detail.item_id %>
        </td>
    　　<td>
            <%= order_detail.price %>
        </td>
        <td>
            <%= order_detail.amount %>
        </td>
        <td>
            <%= order_status %>
        </td>
     </tr>
   <% end %>
  </tbody>
</table>