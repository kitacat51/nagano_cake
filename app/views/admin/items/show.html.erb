<div class="container">
   <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>商品詳細</h>
        <table class="table">
           <tbody>
              <tr>
                <td><%= image_tag @item.get_image %></td>
                <td>
                    商品名<%= @item.name %> <br>
                    商品説明<%= @item.introduction %> <br>
                    ジャンル<%= @item.genre.name %>  <br>
                    税込価格(税抜価格)<%= @item.price %>円 <br>
                    販売ステータス
                    <% if @item.is_active == true %>
                    <%= "販売中" %>
                    <% else %>
                    <%= "販売停止中" %>
                    <% end %>
                </td>
                <td><%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-sm btn-success" %></td>
              </tr>
           </tbody>
        </table>
      </div>
   </div>
</div>