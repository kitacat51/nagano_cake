<h1>商品新規登録</h1>

<%= form_with model: @item,url: '/admin/items' , method: :post do |f| %>
<p>商品画像</p>
<%= f.file_field :image %>

<p>商品名</p>
<%= f.text_field :name %>

<p>商品説明</p>
<%= f.text_area :introduction %>

<p>ジャンル</p>
<%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>

<p>税抜価格</p>
<%= f.text_field :price %>円

<p>販売ステータス</p>
<%= f.radio_button :is_active, :true %>販売中
<%= f.radio_button :is_active, :false %>販売停止中

<%= f.submit "新規登録",class:"btn btn-secondary" %>

<% end %>